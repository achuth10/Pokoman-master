<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".Activities.MainActivity">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/pokoman_icon" />

    <TextView
        android:id="@+id/quiz_name"
        style="@style/headingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:text="Next Game: HQ TRIVIA" />

    <TextView
        android:id="@+id/quiz_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quiz_name"
        android:layout_centerHorizontal="true"
        android:text="1:30 AM IST"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/quiz_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quiz_time"
        android:layout_centerHorizontal="true"
        android:text="Win maximum vouchers"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/quiz_price"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"

        android:layout_marginBottom="10dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="21dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="Instructions before proceeding "
                android:textColor="@color/white"
                android:textSize="20sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. This quiz contains some questions and you have to answer maximum question correctly to win prizes. "
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="20sp"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Every question has a timer and must be answered within time."
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="20sp"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. The host will elaborate the question."
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="20sp"
                android:layout_margin="5dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>